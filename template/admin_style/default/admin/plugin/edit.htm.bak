{extend name="index:layout" /}

{block name="menu"}{/block}

{block name="content"}
<div class='ListLinkCont'>
  <a href="index.php?lfj=$lfj&job=list">插件管理</a>
  <a href="index.php?lfj=$lfj&job=add">手工添加新插件</a>
  <a href="index.php?lfj=$lfj&job=autoadd">自动安装新插件</a>
</div>

<form name="form1" method="post" action="index.php?lfj=$lfj&action=$job">
<div class="MainContainers">
  <div class="Header"><span class="tag">插件配置参数</span><span class="more">&gt;&gt;</span></div>
  <div class="Conter">
      <table class="FormTable">

        <tr> 
          <td class="tdL">插件名称: (<font color="#FF0000">*</font>)</td>
          <td class="tdR"> 
            <input type="text" name="postdb[name]" value="$rsdb[name]" size="40">
          </td>
        </tr>
        <tr> 
          <td class="tdL">别名:</td>
          <td class="tdR"> 
            <textarea name="postdb[linkname]" cols="60" rows="4">$rsdb[linkname]</textarea>
            可留空 </td>
        </tr>
        <tr> 
          <td class="tdL">父级分类名称:</td>
          <td class="tdR"> 
            <input type="text" name="postdb[class2]" value="$rsdb[class2]">
          </td>
        </tr>
        <tr> 
          <td class="tdL">插件关键字:(<font color="#FF0000">*</font>)</td>
          <td class="tdR"> 
            <input type="text" name="postdb[keywords]" value="$rsdb[keywords]" size="40">
            (安装后不能再修改) </td>
        </tr>
        <tr> 
          <td class="tdL">管理地址:(<font color="#FF0000">*</font>)</td>
          <td class="tdR"> 
            <input type="text" name="postdb[adminurl]" value="$rsdb[adminurl]" size="50">
          </td>
        </tr>
        <tr> 
          <td class="tdL">插件作者:</td>
          <td class="tdR"> 
            <input type="text" name="postdb[author]" value="$rsdb[author]" size="30">
          </td>
        </tr>
        <tr> 
          <td class="tdL"> 插件包含的文件/目录:<br>
            ( 每个换一行)</td>
          <td class="tdR"> 
            <textarea name="postdb[hackfile]" cols="60" rows="5">$rsdb[hackfile]</textarea>
          </td>
        </tr>
        <tr> 
          <td class="tdL">插件包含的数据库表名:<br>
            (每个换一行)</td>
          <td class="tdR"> 
            <textarea name="postdb[hacksqltable]" cols="60" rows="5">$rsdb[hacksqltable]</textarea>
          </td>
        </tr>
        <tr> 
          <td class="tdL">插件介绍:</td>
          <td class="tdR"> 
            <textarea name="postdb[about]" cols="60" rows="5">$rsdb[about]</textarea>
          </td>
        </tr>
        <tr> 
          <td class="tdL">排序值:</td>
          <td class="tdR"> 
            <input type="text" name="postdb[list]" value="$rsdb[list]" size="5">
          </td>
        </tr>
      </table>
      <div class='submits'>
            <input type="hidden" name="keywords" value="$keywords">
            <input type="submit" name="Submit" value="提 交">
            <input type="hidden" name="postdb[class1]" value="other">        
      </div>
    </div>
  </div>
</form>
{/block}
